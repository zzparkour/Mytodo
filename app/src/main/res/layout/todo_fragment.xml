<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/todo_fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_input_add"
        android:id="@+id/floatingActionButton3"
        app:layout_constraintLeft_toLeftOf="@+id/todo_fragment_layout"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/todo_fragment_layout"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/todo_fragment_layout"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/todo_fragment_layout"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="0.88"
        />
</android.support.constraint.ConstraintLayout>