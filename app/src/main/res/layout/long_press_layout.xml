<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayout5"
    >


    <Button
        android:text="@string/add_subtask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add_subtask"
        style="?android:attr/buttonBarButtonStyle"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout5"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout5"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout5"
        />

    <Button
        android:text="@string/delete"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:id="@+id/btn_delete_task"
        style="?android:attr/buttonBarButtonStyle"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout5"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_subtask"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout5"
        />
</android.support.constraint.ConstraintLayout>